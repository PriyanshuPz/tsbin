{
  "name": "tsbin",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "build:wasm": "cd crates/wasm && wasm-pack build --target web --out-dir ../../packages/tsbin-wasm/",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "docs": "turbo run dev --filter=docs"
  },
  "packageManager": "bun@1.2.0",
  "devDependencies": {
    "turbo": "2.5.8"
  }
}
